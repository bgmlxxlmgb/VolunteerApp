<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>GetUserRegisterInfoServlet</servlet-name>
        <servlet-class>com.hbuas.servlets.GetUserRegisterInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetUserRegisterInfoServlet</servlet-name>
        <url-pattern>/getUserRegisterInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MobileCheckServlet</servlet-name>
        <servlet-class>com.hbuas.servlets.MobileCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MobileCheckServlet</servlet-name>
        <url-pattern>/mobileCheckServlet</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>com.hbuas.listener.ContextListener</listener-class>
    </listener>
    <context-param>
        <param-name>db_url</param-name>
        <param-value>jdbc:mysql://localhost:3306/weixin</param-value>
    </context-param>
    <context-param>
        <param-name>db_user</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>db_password</param-name>
        <param-value></param-value>
    </context-param>
    <filter>
        <filter-name>codeFilter</filter-name>
        <filter-class>com.hbuas.filter.codeFilter</filter-class>
        <init-param>
            <param-name>charset</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>codeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>